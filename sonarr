    --name=sonarr \
    -e PUID=1000 \
    -e PGID=1000 \
    -e TZ=Asia/Bangkok \
    -e UMASK_SET=022 \
    -p 8899:8989 \
    -v /etc/localtime:/etc/localtime:ro \
